<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>

<body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="700px">
        <pre class="content mt-3"><%= blog.content %></pre>
    </div>

    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageUrl %>" width="50px"/> <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
        <h3>Comments (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="form-floating mb-3">
                    <textarea class="form-control" placeholder="Leave a comment here" id="comment" name="comment" style="height: 50px"></textarea>
                    <label for="comment">Comment</label>
                </div>
                <button class="btn btn-primary mt-1" type="submit">Add</button>
            </form>
        <% } %>    
    </div>

    <div class="container mt-3">
        <% comments.forEach(comment => { %>
         <div class="comment_container">
            <img class="mb-2" src="<%= comment.createdBy.profileImageUrl %>" width="30px"/> <%= comment.createdBy.fullName %>
            <pre><%= comment.content %></pre>
         </div>
        <% }) %>
    </div>

    <%- include('./partials/scripts') %>
</body>

</html>
